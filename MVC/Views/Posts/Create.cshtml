@model Business.Models.PostModel
@{
    ViewData["Title"] = "Create Post";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="text-primary">@ViewData["Title"]</h1>
        <p class="text-muted">Fill out the form below to create a new post.</p>
    </div>

    <div class="card shadow-sm p-4">
        <h4 class="text-secondary mb-4">Post Details</h4>
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

            <!-- Title -->
            <div class="mb-3 row">
                <label asp-for="Title" class="col-3 col-form-label fw-bold">Title:</label>
                <div class="col-8">
                    <input asp-for="Title" class="form-control" placeholder="Enter post title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <!-- Content -->
            <div class="mb-3 row">
                <label asp-for="Content" class="col-3 col-form-label fw-bold">Content:</label>
                <div class="col-8">
                    <textarea asp-for="Content" class="form-control" rows="5" placeholder="Write your content here"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>

            <!-- User -->
            <div class="mb-3 row">
                <label asp-for="UserId" class="col-3 col-form-label fw-bold">User:</label>
                <div class="col-8">
                    <select asp-for="UserId" class="form-select" asp-items="ViewBag.Users">
                        <option value="">Select a user</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
            </div>

            <!-- Category -->
            <div class="mb-3 row">
                <label asp-for="CategoryId" class="col-3 col-form-label fw-bold">Category:</label>
                <div class="col-8">
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                        <option value="">Select a category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <!-- Buttons -->
            <div class="text-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-save"></i> Save
                </button>
                <button type="reset" class="btn btn-outline-secondary me-2">
                    <i class="bi bi-arrow-repeat"></i> Reset
                </button>
                <a asp-action="Index" class="btn btn-link">Back to List</a>
            </div>
        </form>
    </div>
</div>
